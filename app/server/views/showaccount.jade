link(rel='stylesheet', href='/vendor/bootstrap.min.css')
div.navbar.navbar-fixed-top
	div.navbar-inner
		div.container-fluid
			ul#global-nav.nav.pull-left
				a(href='#').brand Control Panel
			button#btn-logout.btn.btn-primary
				i.icon-lock.icon-white
				| 退出
div.container
	div.row-fluid
		hr
		a(href="http://www.happyecard.com")
			img#logo(style="position:absolute;top:0px;left:0;border:0;", src="img/logo.png", alt="have a nice day!")

div.container-fluid
		div.row-fluid
			#top-sperater-setup 
			div.span8
			div.span2
				a#btn.btn-large.btn-warning(href='/item') 添加贺卡
		hr

		div.row-fluid
			div.span2
				div.well
					ul.nav.nav-list
						li.nav-header 设置
						li.active
							a(herf='/home')
								i.icon-cog 
								| 账单管理
						li
							a(herf='/showsetup')
								i.icon-book
								| 账户设置
						li
							a(herf='/')
								| 帮助
			div.span8
				table.table.table-bordered.table-striped.table-condensed
					thead
						tr
							th(style='width:50px') 
							th(style='width:180px') 内部-订单号
							th(style='width:100px') 发卡人
							th(style='width:250px') 查看图片
							th 生成日期
					- for (var i = 0; i < bill_list.length; i++)
						tr
							td
								span.badge.badge-warning
									=i+1
								input(type = 'checkbox')

							td= bill_list[i].bill_id
							td= bill_list[i].user
							td= bill_list[i].imagepath
							td= bill_list[i].date

include footer
include modals/alert
include modals/confirm
include modals/form-errors

script(src='/vendor/jquery.min.js')
script(src='/vendor/jquery.form.js')
script(src='/vendor/bootstrap-modal.js')
script(src='/vendor/bootstrap-transition.js')
script(src='/js/views/home.js')
script(src='/js/controllers/homeController.js')
